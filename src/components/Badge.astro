---
interface Props {
  texto: string;
  color?: string;
  textoColor?: string;
  effects?: string;
}
const {
  texto,
  color = 'bg-blue-600',
  textoColor = 'text-white',
  effects,
} = Astro.props;
---

<span
  class={`inline-block px-3 py-1 rounded-full ${color} ${textoColor} text-xs font-semibold ${effects}`}
>
  {texto}
</span>
